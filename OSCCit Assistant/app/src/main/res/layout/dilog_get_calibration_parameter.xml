<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewChooseCalibrationParam"
        android:text="@string/txtChooseCalibrationParam"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerParamList"
        android:layout_below="@+id/txtViewChooseCalibrationParam"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreateParam"
        android:layout_below="@id/txtViewChooseCalibrationParam"
        android:layout_toEndOf="@id/spinnerParamList"
        android:layout_marginStart="2dp"
        android:text="@string/btnTextCreateNew"
        android:layout_toRightOf="@id/spinnerParamList"
        android:layout_marginLeft="2dp" />

</RelativeLayout>